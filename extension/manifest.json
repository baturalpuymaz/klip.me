{
  "manifest_version": 2,
  "name": "klip.me - Free Clipboard Manager",
  "version": "0.12",
  "permissions": ["tabs", "activeTab", "<all_urls>", "*://*/*", "webRequest"],
  "description": "klip.me is a open source clipboard manager",
  "icons": {
    "16": "icons/19.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/**"],
      "js": ["index.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources" : [
    "*.html"
  ],
 "browser_action": {
    "default_popup": "index.html",
    "default_title": "klip.me - Free Clipboard Manager",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}

  